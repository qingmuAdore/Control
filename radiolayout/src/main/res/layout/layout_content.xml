<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:soulwolf="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <pz.radiolayout.widget.open.RatioCardView
            android:layout_width="match_parent"
            soulwolf:datumRatio="datumWidth"
            soulwolf:widthRatio="16.0"
            soulwolf:heightRatio="4.0"
            android:layout_height="wrap_content"/>

        <pz.radiolayout.widget.RatioFrameLayout
            android:layout_width="match_parent"
            soulwolf:datumRatio="datumWidth"
            soulwolf:widthRatio="16.0"
            soulwolf:heightRatio="9.0"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="25sp"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@color/colorText"
                android:text="RatioFrameLayout:16*9"
                android:textColor="@android:color/white"/>
        </pz.radiolayout.widget.RatioFrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_marginTop="8dp"
            android:layout_height="wrap_content">

            <pz.radiolayout.widget.RatioImageView
                android:id="@+id/image2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                soulwolf:datumRatio="datumWidth"
                soulwolf:widthRatio="16.0"
                soulwolf:heightRatio="7.0"
                android:scaleType="centerCrop"/>

            <pz.radiolayout.widget.RatioTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="25sp"
                android:textStyle="bold"
                android:gravity="center"
                soulwolf:datumRatio="datumWidth"
                soulwolf:widthRatio="16.0"
                android:background="@color/colorText"
                soulwolf:heightRatio="7.0"
                android:text="RatioImageView/RatioTextView:16*7"
                android:textColor="@android:color/white"/>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <pz.radiolayout.widget.RatioImageView
                android:id="@+id/image5"
                android:layout_width="0dp"
                android:layout_weight="1"
                soulwolf:datumRatio="datumWidth"
                soulwolf:widthRatio="10.0"
                soulwolf:heightRatio="9.0"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>

            <pz.radiolayout.widget.RatioImageView
                android:id="@+id/image6"
                android:layout_width="0dp"
                android:layout_weight="1"
                soulwolf:datumRatio="datumWidth"
                soulwolf:widthRatio="10.0"
                android:layout_marginLeft="15dp"
                soulwolf:heightRatio="9.0"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>

        </LinearLayout>

        <pz.radiolayout.widget.RatioLinearLayout
            android:layout_width="match_parent"
            soulwolf:datumRatio="datumWidth"
            soulwolf:widthRatio="15.0"
            soulwolf:heightRatio="7.0"
            android:layout_marginTop="8dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="25sp"
                android:textStyle="bold"
                android:background="@color/colorText"
                android:gravity="center"
                android:text="RatioLinearLayout:15*7"
                android:textColor="@android:color/white"/>

        </pz.radiolayout.widget.RatioLinearLayout>

        <pz.radiolayout.widget.RatioRelativeLayout
            android:layout_width="match_parent"
            soulwolf:datumRatio="datumWidth"
            soulwolf:widthRatio="15.0"
            android:layout_marginTop="8dp"
            soulwolf:heightRatio="10.0"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="25sp"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@color/colorText"
                android:text="RatioRelativeLayout:15*10"
                android:textColor="@android:color/white"/>

        </pz.radiolayout.widget.RatioRelativeLayout>
    </LinearLayout>

</ScrollView>